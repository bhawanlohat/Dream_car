@page
@model Dream_car.Pages.Specifications.IndexModel

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Specification[0].Fuel_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification[0].Transmission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification[0].GPS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification[0].Model)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Specification)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Transmission)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GPS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model.Model_Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
